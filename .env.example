# Grid & Guard Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# FIREBASE CONFIGURATION (Client-side)
# ============================================
# These are prefixed with VITE_ to be accessible in the browser
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ============================================
# STRIPE CONFIGURATION (Server-side only)
# ============================================
# DO NOT prefix with VITE_ - these should stay server-side only
STRIPE_SECRET_KEY=sk_live_your_secret_key_here

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# The domain where your app is hosted (used for CORS)
ALLOWED_ORIGINS=https://gridandguard.com,https://www.gridandguard.com

# Server port for local development
PORT=3001
